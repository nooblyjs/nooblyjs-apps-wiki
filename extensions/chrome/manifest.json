{
  "manifest_version": 3,
  "name": "NooblyJS Wiki",
  "version": "1.0.0",
  "description": "Read-only access to your NooblyJS Wiki documentation",
  "permissions": [
    "storage"
  ],
  "host_permissions": [
    "http://localhost:3002/*",
    "http://127.0.0.1:3002/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "background": {
    "service_worker": "background.js"
  }
}
