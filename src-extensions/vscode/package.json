{
  "name": "nooblyjs-wiki",
  "displayName": "NooblyJS Wiki",
  "description": "Read-only access to your NooblyJS Wiki documentation",
  "version": "1.0.0",
  "publisher": "nooblyjs",
  "engines": {
    "vscode": "^1.75.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "nooblyjs-wiki.login",
        "title": "NooblyJS Wiki: Login",
        "icon": "$(sign-in)"
      },
      {
        "command": "nooblyjs-wiki.logout",
        "title": "NooblyJS Wiki: Logout",
        "icon": "$(sign-out)"
      },
      {
        "command": "nooblyjs-wiki.selectSpace",
        "title": "NooblyJS Wiki: Select Space",
        "icon": "$(folder)"
      },
      {
        "command": "nooblyjs-wiki.refresh",
        "title": "NooblyJS Wiki: Refresh",
        "icon": "$(refresh)"
      },
      {
        "command": "nooblyjs-wiki.openFile",
        "title": "NooblyJS Wiki: Open File"
      },
      {
        "command": "nooblyjs-wiki.toggleStar",
        "title": "NooblyJS Wiki: Toggle Star",
        "icon": "$(star)"
      },
      {
        "command": "nooblyjs-wiki.search",
        "title": "NooblyJS Wiki: Search",
        "icon": "$(search)"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "nooblyjs-wiki",
          "title": "NooblyJS Wiki",
          "icon": "media/icon.svg"
        }
      ]
    },
    "views": {
      "nooblyjs-wiki": [
        {
          "id": "nooblyjs-wiki.explorer",
          "name": "Files",
          "icon": "media/icon.svg",
          "contextualTitle": "NooblyJS Wiki"
        },
        {
          "id": "nooblyjs-wiki.recent",
          "name": "Recent",
          "icon": "$(history)"
        },
        {
          "id": "nooblyjs-wiki.starred",
          "name": "Starred",
          "icon": "$(star-full)"
        },
        {
          "id": "nooblyjs-wiki.search",
          "name": "Search",
          "icon": "$(search)"
        }
      ]
    },
    "menus": {
      "view/title": [
        {
          "command": "nooblyjs-wiki.login",
          "when": "view =~ /nooblyjs-wiki/ && !nooblyjs-wiki.authenticated",
          "group": "navigation"
        },
        {
          "command": "nooblyjs-wiki.logout",
          "when": "view =~ /nooblyjs-wiki/ && nooblyjs-wiki.authenticated",
          "group": "navigation@3"
        },
        {
          "command": "nooblyjs-wiki.selectSpace",
          "when": "view == nooblyjs-wiki.explorer && nooblyjs-wiki.authenticated",
          "group": "navigation@1"
        },
        {
          "command": "nooblyjs-wiki.refresh",
          "when": "view =~ /nooblyjs-wiki/ && nooblyjs-wiki.authenticated",
          "group": "navigation@2"
        }
      ],
      "view/item/context": [
        {
          "command": "nooblyjs-wiki.toggleStar",
          "when": "view =~ /nooblyjs-wiki/ && viewItem == file",
          "group": "inline"
        }
      ]
    },
    "configuration": {
      "title": "NooblyJS Wiki",
      "properties": {
        "nooblyjs-wiki.serverUrl": {
          "type": "string",
          "default": "http://localhost:3002",
          "description": "URL of the NooblyJS Wiki server"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^8.0.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "16.x",
    "@types/vscode": "^1.75.0",
    "@typescript-eslint/eslint-plugin": "^5.45.0",
    "@typescript-eslint/parser": "^5.45.0",
    "@vscode/test-electron": "^2.2.0",
    "eslint": "^8.28.0",
    "glob": "^8.0.3",
    "mocha": "^10.1.0",
    "typescript": "^4.9.3"
  },
  "dependencies": {
    "axios": "^1.6.0",
    "marked": "^4.0.0"
  }
}
