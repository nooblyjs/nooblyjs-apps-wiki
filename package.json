{
  "name": "nooblyjs-app-wiki",
  "version": "1.0.1",
  "description": "Application the exposes a fully featured wiki",
  "author": "NooblyJS Team <info@nooblyjs.com>",
  "main": "./src/app-electron.js",
  "scripts": {
    "start": "node app.js",
    "dev:web": "nodemon --watch src app.js",
    "kill": "  kill -9 $(lsof -t -i:3002)",
    "electron": "electron .",
    "electron:build": "electron-builder",
    "electron:build:win": "electron-builder --win",
    "electron:build:mac": "electron-builder --mac",
    "electron:build:linux": "electron-builder --linux"
  },
  "dependencies": {
    "@anthropic-ai/claude-code": "^1.0.81",
    "@google/gemini-cli": "^0.2.1",
    "bcryptjs": "^3.0.2",
    "body-parser": "^1.20.2",
    "chokidar": "^4.0.3",
    "ejs": "^3.1.9",
    "express": "^4.18.2",
    "express-session": "^1.17.3",
    "mammoth": "^1.11.0",
    "mime-types": "^3.0.1",
    "multer": "^2.0.0-rc.4",
    "nooblyjs-core": "1.0.1",
    "passport": "^0.7.0",
    "passport-google-oauth20": "^2.0.0",
    "passport-local": "^1.0.0",
    "pdf-parse": "^2.2.2",
    "pdf-to-img": "^5.0.0",
    "pptx-parser": "^1.1.7-beta.9",
    "pptx2json": "^0.0.10",
    "socket.io": "^4.8.1",
    "uuid": "^11.1.0",
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "electron": "^38.2.0",
    "electron-builder": "^26.0.12",
    "nodemon": "^3.0.1"
  },
  "build": {
    "appId": "com.nooblyjs.wiki",
    "productName": "NooblyJS Wiki",
    "directories": {
      "output": "dist"
    },
    "files": [
      "index.js",
      "src/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "extraResources": [
      {
        "from": ".application",
        "to": ".application",
        "filter": [
          "**/*"
        ]
      }
    ],
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "public/favicon.ico"
    },
    "mac": {
      "target": [
        "dmg"
      ],
      "category": "public.app-category.productivity"
    },
    "linux": {
      "target": [
        "AppImage"
      ],
      "category": "Office"
    }
  }
}
